#features
  margin-top 5%
  h2
    font-size 3.75rem
    margin 0
    font-weight: bold;
  header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    margin-bottom 50px
    p
      margin-top 5%
      font-size  1.75rem
  .features-content-box
    flex-wrap wrap
    margin 0 auto
    width 65%
    justify-content center
    align-content center
    .swipeItem
      width: 100%
      display: flex;
      flex-wrap: wrap;
      justify-content: center
    figure
      margin 0
    figcaption
      text-align: center
      font-size 1.5rem
      margin-top 1.5rem
      font-weight 500
    .content-wrap
      background-color: #fff;
      display: flex;
      height 230px
      width 100%
      align-items: center;
      flex-direction: column;
      justify-content center
      margin: 20px 20px
      border-radius: 20px;
      box-shadow: 0 20px 20px 0 rgba(41, 41, 204, 0.16);
      background-color: #ffffff;
      img
        width 80px
    .swiper-slide
      display flex
      justify-content center
      flex-wrap: wrap
      padding-bottom 20px

@media screen and (min-width 2560px)
  .features-content-box
    width 50% !important

@media screen and (min-width 1600px) and (max-width 1919px)
  .features-content-box
    width 75% !important

@media screen and (min-width 1300px) and (max-width 1599px)
  .features-content-box
    width 85% !important

@media screen and (min-width 1025px) and (max-width 1299px)
  .features-content-box
    width 85% !important

@media screen and (min-width 768px) and (max-width 1023px)
  .features-content-box
    width 90% !important
