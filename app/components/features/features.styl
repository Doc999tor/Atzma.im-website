  #features
    padding 11rem 0 9rem
    .features-content-box
      width 70%
      transition width 0.3s
      .swiper-slide
        justify-content space-around
      .slide-item
        justify-content center
        width 23.5rem
        min-height 14.375rem
        padding 2.75rem 1.5% 1.7rem
        figcaption
          margin-top 1.125rem 
          font-size 1.5rem
        p
        img
          width 4.625rem
    header
      h2
        font-size 3.75rem
      p
        font-size 1.75rem
    .features-content-box,.swiper-slide
      padding-top 2.5rem !important
