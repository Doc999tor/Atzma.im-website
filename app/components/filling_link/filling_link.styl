.filling_link
  position relative
  background-image linear-gradient(162deg, #7b3fdf 11%, #591ec0 46%, #291153 92%)
  padding-bottom 5.125rem
  .title_wrap
    padding 2rem 1rem 0.75rem
    .filling_title
      margin 0
      text-align center
      font-size 2rem
      font-weight bold
      line-height 1
      color var(--white-color)
      padding-bottom 1rem
    .filling_subtitle
      font-size 1.125rem
      line-height 1.2
      color var(--white-color)
      text-align center
  .image_wrap
    position relative
    img
      width 100%
      object-fit cover
    .button_wrap
      width fit-content
      background-color #163c91
      height 4rem
      position absolute
      left 50%
      transform translateX(-50%)
      border-radius 1rem
      bottom 0
      button
        display flex
        align-items center
        justify-content center
        height 4rem
        padding 0 2rem
        white-space nowrap
        border-radius 1rem
        font-size 1.5rem
        font-weight 500
        text-transform uppercase
        position relative
        top -0.25rem
        background-color #326ced
        img
          -moz-margin-start 1rem
          -webkit-margin-start 1rem
          margin-inline-start 1rem
  .hand
    position absolute
    width 10.625rem
    left 50%
    bottom 0
body[style='direction: rtl;']
  .button_wrap
    button
      img
        transform scale(-1, 1)