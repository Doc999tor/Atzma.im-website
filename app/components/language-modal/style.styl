#modal-background
  transition 0.2s ease-out
  overflow scroll
  position fixed
  display block
  z-index 1000
  height 100%
  width 100%
  outline 0
  bottom 0
  right 0
  left 0
  top 5rem
  padding-top 10px
#modal-wrapper
  overflow scroll
  position fixed
  display block
  z-index 2000
  height 100%
  width 100%
  outline 0
  bottom 0
  right 0
  left 0
  top 0
#modal-content
  transform translateY(-25%)
  transition 0.2s ease-out
  border-radius 10px
  position absolute
  z-index 2000
  outline 0
  width 8rem
  right 12%
  box-shadow: 0px 0px 5px 4px rgba(0,0,0,0.16);
  background-image: linear-gradient(to bottom, #591ec0, #4f2da7);
  .lang-wrap
    display flex
    flex-direction: column
    padding 0.5rem
    align-items: center;
    a 
      padding 0.5rem 0 0.5rem
      text-decoration: none
      color var(--white-color)
      text-transform: uppercase
#hidden
  display none
.fade-background
  transition 0.3s ease-out!important
.fade-content
  transform translate(0, 0)!important
  transition 0.3s ease-out!important
