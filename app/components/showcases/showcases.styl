#showcases
  height 135vh
  max-height 1400px
  overflow hidden
  display flex
  .main-box
    display flex
    width 100%
    .sub-box
      display flex
      position relative
      width 45%
      align-items: flex-start
      flex-direction column
      padding-top 15%
      -moz-padding-start 13%
      -webkit-padding-start 13%
      padding-inline-start 13%
      -moz-padding-end 2%
      -webkit-padding-end 2%
      padding-inline-end 2%
      h2
        font-size 3.75rem
        line-height 1.07
        margin 0
        font-weight bold
      p
        padding 1.5rem 0 3.75rem
        line-height 1.25
        font-size 1.75rem
      .try-for-free-btn
        text-transform uppercase
        font-size 1.375rem
        display flex
        justify-content center
        padding 1.4rem 3.3rem
        align-items center
        border-radius 50px
        border 3px solid transparent
        background-color var(--active-color)
        outline none
        text-decoration none
        font-weight bold
        transition background-color 0.3s linear, border-color 0.3s linear, color 0.3s linear
        &:hover, &:focus
          background-color var(--white-color)
          border-color currentColor
          color var(--active-color) !important
          svg
            fill var(--active-color)
            stroke var(--active-color)
        svg 
          width 1.5rem
          height 1.5rem
          fill var(--white-color)
          stroke var(--white-color)
          margin-inline-end 0.7rem
          transition fill 0.3s, stroke 0.3s
      a
        color var(--white-color)
        letter-spacing: 1.2px;
        display inline-block

    .img-container
      position relative
      height 100%
      flex-grow 1
      img 
        position: absolute
        border-radius: 20px
    .frame-1 
      top 3.5rem
    .frame-2
      top 6.5rem
    .frame-3
      top: 30.5rem;
    .frame-4
      top: 38.5rem;
    .icon-1
      transform: skew(35.7deg, -22deg);
      top: 6.8rem;
      width: 17.5rem;
      height: 31rem;
    .icon-2
      transform skew(35.7deg, -22deg)
      top 9.8rem
      width 17.5rem
      height 31rem
    .icon-3
      transform skew(35.7deg, -22deg)
