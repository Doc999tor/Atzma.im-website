#showcases
  height 120vh
  display flex
  overflow hidden
  .main-box
    display flex
    width 100%
    .sub-box
      display flex
      position relative
      width 45%
      align-items: flex-start
      flex-direction column
      padding-top 15%
      -moz-padding-start 13%
      -webkit-padding-start 13%
      padding-inline-start 13%
      -moz-padding-end 2%
      -webkit-padding-end 2%
      padding-inline-end 2%
      h2
        font-size 3.75rem
        line-height 1.07
        margin 0
        font-weight bold
      p
        padding 1.5rem 0 3.75rem
        line-height 1.25
        font-size 1.75rem
      .try-for-free-btn
        text-transform uppercase
        font-size 1.375rem
        display flex
        justify-content center
        padding 1.4rem 3.3rem
        align-items center
        border-radius 50px
        border 3px solid transparent
        background-color var(--active-color)
        outline none
        text-decoration none
        font-weight bold
        transition background-color 0.3s linear, border-color 0.3s linear, color 0.3s linear
        &:hover, &:focus
          background-color var(--white-color)
          border-color currentColor
          color var(--active-color) !important
          svg
            fill var(--active-color)
            stroke var(--active-color)
        svg 
          width 1.5rem
          height 1.5rem
          fill var(--white-color)
          stroke var(--white-color)
          margin-inline-end 0.7rem
          transition fill 0.3s, stroke 0.3s
      a
        color var(--white-color)
        letter-spacing: 1.2px;
        display inline-block

    .img-container
      position relative
      height 100%
      flex-grow 1
      img 
        position: absolute
        border-radius: 20px
    .frame-1 
      top: 4rem;
    .frame-2
      top: 4rem;
    .frame-3
      top: 26rem;
    .frame-4
      top: 39rem;
    .icon-1
      transform: skew(35.7deg, -21deg);
      top: 11.8rem;
      width: 18rem;
      height: 30rem;
    .icon-2
      transform: skew(35.7deg, -21deg);
      top: 11.8rem;
      width: 18rem;
      height: 30rem;
    .icon-3
      transform: skew(35.7deg, -21deg);
      top: 33.8rem;
      width: 18rem;
      height: 30rem;
    .icon-4
      transform: skew(35.7deg, -21deg);
      top: 46.8rem;
      width: 18rem;
      height: 30rem;
    .rtl-frame-1
      right -5rem
      top 12rem
    .ltr-frame-1
      left: 5rem
    .rtl-frame-2
      right 30rem
    .ltr-frame-2
      left: 34rem;
    .rtl-frame-3
      right 6rem
      top 39rem 
    .ltr-frame-3
      left: -8rem;
    .rtl-frame-4
      right 37rem
      top 35rem
    .ltr-frame-4
      left: 30rem;
    .ltr-icon-1
      left: 23rem;
    .rtl-icon-1
      right: 13rem;
      top 19.8rem
    .ltr-icon-2
      left: 52rem;
    .rtl-icon-2
      right: 48rem;
    .ltr-icon-3
      left: 10rem;
    .rtl-icon-3
      right: 24rem;
      top 46.8rem
    .ltr-icon-4
      left: 48rem;
    .rtl-icon-4
      right: 55rem;
      top 42.8rem
