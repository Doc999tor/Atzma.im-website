#showcases
  padding-top 4rem
  display flex
  height 127vh
  .main-box
    display flex
    width 100%
    .sub-box
      display flex
      position relative
      min-width 560px
      align-items flex-start
      flex-direction column
      width 40%
      padding-top 2%
      -moz-padding-start 7.5%
      -webkit-padding-start 7.5%
      padding-inline-start 7.5%
      h2
        font-size 3.125rem
        line-height 1.12
        margin 0
        font-weight bold
      p
        padding 1.5rem 0 3.75rem
        padding-bottom 2.75rem
        max-width 91%
        line-height 1.25
        font-size 1.375rem
    .img-container
      position relative
      height 100%
      flex-grow 1
      img 
        position absolute
        border-radius 20px
        z-index 3
    .icon-1, .icon-2, .icon-3, .icon-4
      width 18.875rem
      height 15.625rem
    .ltr-icon-1
      left -1rem
    .icon-1
      top -1rem
    .icon-2
      top -3rem
    .rtl-icon-2
      right 5rem
      top 1rem
    .rtl-icon-1
      right -5rem
    .ltr-icon-2
      left 9rem
    .icon-4
      top 8rem
    .icon-3
      top 10rem
    .rtl-icon-4
      right -6rem
      top 12rem
      z-index -1
    .ltr-icon-4
      left -4rem
    .ltr-icon-3
      left 10rem
    .rtl-icon-3
      right 9rem
      top 9rem

@media screen and (min-width 1024px) and (max-width 1365px)
  #showcases
    height 130vh !important
    max-height 50rem !important
    .main-box
      .sub-box
        width 42%
        padding-top 2%
        -moz-padding-start 5%
        -webkit-padding-start 5%
        padding-inline-start 5%
        -moz-padding-end 2%
        -webkit-padding-end 2%
        padding-inline-end 2%
        p
          padding 0.5rem 0 2.75rem
      .main-desc
        text-align center
      .desc
        text-align center

@media screen and (min-width 768px) and (max-width 1023px)
  #showcases
    .main-box
      .sub-box
        width 45%
        min-width 440px
        padding-top 2%
        -moz-padding-start 5%
        -webkit-padding-start 5%
        padding-inline-start 5%
        h2
          font-size 2.75rem
        p
          font-size 1.25rem
          padding 0.5rem 0 2.75rem
      .main-desc
        text-align center
      .desc
        text-align center

@media screen and (min-width 320px) and (max-width 767px)
  #showcases
    height 100%
    padding-top 2rem
    .main-box
      flex-direction column
      .sub-box
        width 100%
        min-width auto
        padding 1rem 1rem 0
        h2
          font-size 2rem
        p
          font-size 1.25rem
          padding 0.5rem 0 2.6rem
      .main-desc
        text-align center
      .desc
        text-align center
      .img-container
        height 27rem
      .btn_wrap
        padding 0 1rem


@media screen and (min-width 1920px)
  #showcases
    max-height 87.5rem
    padding-top 4rem
    .main-box
      .sub-box
        padding-top 10%
        padding-inline-end 0
        width 37%
        h2
          font-size 3.75rem
        p
          font-size 1.75rem