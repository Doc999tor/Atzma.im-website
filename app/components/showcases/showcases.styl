#showcases
  .main-box
    width 100%
    .sub-box
      padding 2rem 1rem
      background-image linear-gradient(to bottom, #ffffff, #efefff)
      h2
        font-size 2rem
        margin 0
        line-height 1.1
        font-weight bold
        text-align center
      p
        padding-top 1rem
        text-align center
        font-size 1.125rem
      .try-for-free-btn
        width fit-content
        margin 1rem auto 0rem
    .img-container
      width 100%
      display flex
      picture
        display flex
        flex-direction column
        img
          width 100%
          object-fit cover
