#showcases
  height 120vh
  background-repeat: no-repeat;
  display flex
  overflow hidden
  margin-top 50px
  .main-box
    display flex
    width 100%
    .sub-box
      display flex
      position relative
      width 40%
      margin-top: 15rem;
      flex-wrap wrap
      flex-direction: column
      z-index 1
      padding 0 6rem 0 8rem
      .try-for-free-btn
        text-transform uppercase
        font-size: 1.375rem
        display: flex;
        width: 19rem;
        height: 4.5rem;
        justify-content: center;
        align-items: center;
        border-radius 50px
        border 3px solid transparent
        /* polyfill for old browsers */
        background-color #f0a
        background-color var(--active-color)
        outline none
        text-decoration none
        font-weight 600
        transition background-color 0.3s linear, border-color 0.3s linear, color 0.3s linear
        &:hover, &:focus
          /* polyfill for old browsers */
          background-color #fff
          background-color var(--white-color)
          border-color currentColor
          color var(--active-color) !important
          svg path
            fill #f0a
            stroke:#f0a
        svg 
          width 24px
          height 24px
          fill #fff
          stroke-width: 1.5px
          stroke:#fff
          margin-inline-end: 10px
      a
        color var(--white-color)
        letter-spacing: 1.2px;
        display inline-block
    .main-desc
      h2
        font-size 3.75rem
        margin 0
        font-weight: bold
    .desc
      padding 20px 0 50px
      p
        font-size 1.75rem
    .img-container
      position relative
      img 
        position: absolute
        border-radius: 20px
    .frame-1 
      top: 4rem;
    .frame-2
      top: 4rem;
    .frame-3
      top: 26rem;
    .frame-4
      top: 39rem;
    .icon-1
      transform: skew(35.7deg, -21deg);
      top: 11.8rem;
      width: 18rem;
      height: 30rem;
    .icon-2
      transform: skew(35.7deg, -21deg);
      top: 11.8rem;
      width: 18rem;
      height: 30rem;
    .icon-3
      transform: skew(35.7deg, -21deg);
      top: 33.8rem;
      width: 18rem;
      height: 30rem;
    .icon-4
