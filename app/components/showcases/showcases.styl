#showcases
  padding-top 4rem
  display flex
  height 127vh
  max-height 57rem
  .main-box
    display flex
    width 100%
    .sub-box
      display flex
      position relative
      min-width 560px
      align-items flex-start
      flex-direction column
      width 40%
      padding-top 2%
      -moz-padding-start 7.5%
      -webkit-padding-start 7.5%
      padding-inline-start 7.5%
      h2
        font-size 3.125rem
        line-height 1.12
        margin 0
        font-weight bold
      p
        padding 1.5rem 0 3.75rem
        padding-bottom 2.75rem
        max-width 91%
        line-height 1.25
        font-size 1.375rem

@media screen and (min-width 1024px) and (max-width 1365px)
  #showcases
    height 130vh !important
    max-height 50rem !important
    .main-box
      .sub-box
        width 42%
        padding-top 2%
        -moz-padding-start 5%
        -webkit-padding-start 5%
        padding-inline-start 5%
        -moz-padding-end 2%
        -webkit-padding-end 2%
        padding-inline-end 2%
        p
          padding 0.5rem 0 2.75rem
      .main-desc
        text-align center
      .desc
        text-align center

@media screen and (min-width 768px) and (max-width 1023px)
  #showcases
    .main-box
      .sub-box
        width 45%
        min-width 440px
        padding-top 2%
        -moz-padding-start 5%
        -webkit-padding-start 5%
        padding-inline-start 5%
        h2
          font-size 2.75rem
        p
          font-size 1.25rem
          padding 0.5rem 0 2.75rem
      .main-desc
        text-align center
      .desc
        text-align center

@media screen and (min-width 320px) and (max-width 767px)
  #showcases
    height 100%
    padding-top 2rem
    .main-box
      .sub-box
        width 100%
        min-width auto
        padding 1rem
        h2
          font-size 2rem
        p
          font-size 1.25rem
          padding 0.5rem 0 2.75rem
      .main-desc
        text-align center
      .desc
        text-align center


@media screen and (min-width 1920px)
  #showcases
    max-height 87.5rem
    padding-top 4rem
    .main-box
      .sub-box
        padding-top 10%
        padding-inline-end 0
        width 37%
        h2
          font-size 3.75rem
        p
          font-size 1.75rem