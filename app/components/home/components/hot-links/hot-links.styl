#hot-links
  height fit-content
  padding-top 10px
  display flex
  overflow-x auto
  background #fff
  .link-wrap
    .link
      height 65px
      text-align center
      color purple
      font-size 16px
      display flex
      flex-direction column
      justify-content center
      align-items center
      background var(--sec-bgcolor)
    .link.add-btn
      background transparent
    .circle1
      width 65px
      margin 0 9px
      border-radius 50%
    .square
      margin 0 9px
      width 65px
      border-radius 18px
    span
      color black
      display flex
      justify-content center
      font-size 0.75em
      padding 0
      font-weight 600
      margin 10px 0
  .link-add
    .circle-wrap
      display flex
      align-items center
      justify-content center
      width 65px
      height 65px
      border-radius 50%
      background-color var(--active-color)
      margin 0 9px
    .link-name
      color black
      display flex
      text-align center
      justify-content center
      font-size 0.75em
      padding 0
      font-weight 600
      margin 10px 0
      max-width 83px