// @import "../../../../variables.css"
#phone
  padding 0 10px
  min-height 4em
  display flex
  border-top 1px solid #dedeff
  .label
    font-size 0.8em
    font-weight 600
    color var(--dark-color)
  .phone-img
    display flex
    align-items center
    .img-wrap
      -webkit-margin-start 10px
      -moz-margin-start 10px
      a
        display block
        height 38px
  .data-phone
    width 100%
    display flex
    justify-content space-between
    .wrap
      display flex
      flex-direction column
      margin-top 5px
  .phone-labels
    cursor pointer
    font-size 18px
    margin-top 5px
    .label-wrap
      .call-label
        background-color transparent
  .add-phone
    display flex
    width 100%
    justify-content space-between
    .add-wrap
      display flex
      flex-direction column
      justify-content space-between
      padding 3px 0
      h1
        color var(--main-color)
    .add-info
      display flex
      align-items center
      .add-wrap
        width 24px
        height 24px
        background-color var(--active-color)
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
    img
      display flex
      width 38px
      height 38px
      align-self center
  .phone-edit
    display flex
    // flex-direction row
    justify-content space-between
    width 100%
    .edit
      display flex
      justify-content space-between
      width 100%
      .edit-wrap  
        display flex
        flex-direction column
        margin-top 5px
      .edit-input
        display flex
        border none
        font-size 18px
        margin-top 7px
        // height 30px
        // width 80%
        font-weight 500
        &:focus
          outline none
      .del-info
        display flex
        align-items center
        .del-wrap
          width 24px
          height 24px
          border 1px solid #deceff
          border-radius 50%
          display flex
          align-items center
          justify-content center
          img 
            width 17px
            height 17px
            transform rotate(45deg)




    .button
      display flex
      margin auto 0
      button
          display inline-block
          cursor pointer
          border-radius 15px
          border none
          background-color var(--main-bgcolor)
          color white
          &:focus
            outline none
  .hidden
    display none
.error
  display flex
  justify-content center
  color red
  font-size 16px
