#header
  display flex
  justify-content center
  .contact_head
    display flex
    z-index: 2
    padding: 2rem 0;
    width 80%
    background-image: linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
    a
      color var(--white-color)
      text-decoration none
      cursor pointer
    .top-nav
      display flex
      font-weight bold
      align-items center
      flex-grow 1
      z-index 1
      text-transform uppercase
      font-size: 1.125rem
      a
        padding 0 1.6rem
        white-space nowrap
        transition color 0.3s linear
      a:hover
        color var(--active-color)
      a:focus
        color var(--white-color)
        outline 0
    .logo-wrap
      display flex
      z-index 1
      align-items center
    .log-in
      font-weight bold
      text-transform uppercase
      font-size 1.125rem
      z-index 1
      align-items center
      display flex
      a
        white-space nowrap
      .login-btn
        cursor pointer
        transition color 0.2s linear
      .login-btn:hover
        color var(--active-color)
      .login-btn:focus
        color var(--white-color)
      .sign-in-btn
        transition background-color 0.3s linear
        font-weight bold
        cursor pointer
        display flex
        align-items center
        margin 0 3.1rem
        padding 0.8rem 1.6rem
        border-radius 50px
        background-color transparent
        border 3px solid var(--white-color)
      .sign-in-btn:hover
        background-color var(--white-color)
        color var(--active-color)
    .lang-block
      display flex
      align-items center
      .img-wrap
        display flex
      .lang-text
        padding-inline-start 0.5rem
        font-size 1.125rem
        text-transform uppercase
        color var(--white-color)
        font-weight bold
    .lang_dropdown
      display flex
      align-items center
      position relative
      height 100%
    .lang_dropdown:hover .dropDown_wrap
      display flex
      justify-content flex-end
    .lang_dropdown:hover .lang-text
      color var(--active-color)
      transition color 0.3s

h2
  font-weight normal
   
@media screen and (min-width 1366px) and (max-width 1440px)
  .logo-text
    padding-inline-end 1.1rem
  .contact_head
    width 90% !important
    .top-nav
      a
        padding 0 1.1rem !important
  .sign-in-btn
    margin 0 2.25rem !important


@media screen and (min-width 1024px) and (max-width 1365px)
  .logo-text
    padding-inline-end 0.7rem !important
  .top-nav
    flex-wrap wrap
  .contact_head
    width 90% !important
    .top-nav
      a
        padding 0 0.7rem !important
  .sign-in-btn
    margin 0 1.4rem !important

@media screen and (min-width 414px) and (max-width 1023px)
  .contact_head
    width 90% !important
    justify-content space-between
    // padding 0.5rem 0 !important
    .top-nav
      display none !important
    .sign-in-btn
      margin 0 0.8rem !important
