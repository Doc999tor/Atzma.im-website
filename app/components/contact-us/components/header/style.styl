#header
  display flex
  justify-content center
  color var(--white-color)
  background-image: linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
  .contact_head
    display flex
    padding 1.8rem 0
    width 85%
    transition width 0.3s
    .logo-text
    a
      color var(--white-color)
      text-decoration none
    a
      cursor pointer
    .top-nav
      display flex
      flex-wrap wrap
      font-weight bold
      align-items center
      flex-grow 1
      text-transform uppercase
      font-size 1rem
      a
        padding 0 1.6rem
        white-space nowrap
        transition color 0.3s linear
      a:hover
        color var(--active-color)
      a:focus
        color var(--white-color)
        outline 0
    .logo-wrap
      display flex
      align-items center
    .log-in
      font-weight bold
      text-transform uppercase
      font-size 1rem
      align-items center
      display flex
      a
        white-space nowrap
      .login-btn
        cursor pointer
        transition color 0.2s linear
      .login-btn:hover
        color var(--active-color)
      .login-btn:focus
        color var(--white-color)
      .sign-in-btn
        transition background-color 0.3s linear
        font-weight bold
        cursor pointer
        display flex
        align-items center
        margin 0 2.5rem
        padding 0.75rem 1.25rem
        border-radius 50px
        background-color rgba(0, 0, 0, 0.12)
        border 2px solid var(--white-color)
        span
          line-height 1
      .sign-in-btn:hover
        background-color var(--white-color)
        color var(--active-color)
    .lang-block
      display flex
      align-items center
      .img-wrap
        display flex
      .lang-text
        padding-inline-start 0.5rem
        font-size 1rem
        text-transform uppercase
        color var(--white-color)
        font-weight bold
    .lang_dropdown
      display flex
      align-items center
      position relative
      height 100%
      svg
        width 1.5rem
        height 1.5rem
        fill var(--white-color)
    .lang_dropdown:hover .dropDown_wrap
      display flex
      justify-content flex-end
    .lang_dropdown:hover .lang-text
      color var(--active-color)
      transition color 0.3s
    .lang_dropdown:hover svg
      fill var(--active-color)
      transition fill 0.3s

h2
  font-weight normal
   
