#contact-block
  background-color var(--white-color)
  display flex
  flex-direction column
  padding-bottom 6rem
  .communicate-sup-block
    width 50%
    margin 0 auto
    padding-top 2.6rem
    p
      font-size 1.75rem
      text-align center
    .contacts-block
      padding-top 3.8rem
      display flex
      flex-wrap wrap
      width 100%
      justify-content center
      margin 0 auto
      div
        display flex
        padding 2% 2%
      .label, a
        font-size 1.375rem
      .label
        font-weight 600
        margin-inline-end: .6rem
      a
        text-decoration none
        color inherit
        white-space nowrap
        direction: ltr
  .messengers
    padding-top 3.8rem
    display flex
    flex-wrap wrap
    justify-content space-around

@media screen and (min-width 1300px) and (max-width 1599px)
  .communicate-sup-block
    width 65% !important

@media screen and (min-width 768px) and (max-width 1365px)
	.communicate-sup-block
    width 95% !important

@media screen and (min-width 320px) and (max-width 767px)
  #contact_title
    padding-top 2rem
  #contact-block
    .communicate-sup-block
      width 96%
      p
        font-size 1.2rem
        padding 0 1rem
      .messengers
        .item
          margin 0 0.5rem 1rem
          width 8rem
          .icon_wrap
            display flex
            padding-bottom 0.5rem
          .icon
            width 3rem
          .name
            font-size 0.75rem
            padding 0.5rem
      .contacts-block
        div
          padding 0.2rem
        .label, a
          font-size 1rem
