#footer
  color var(--white-color)
  background-image: linear-gradient(to bottom, #874bea, #591ec0)
  .top-block
    width 100%
    padding 1rem 0 0
    display flex
    flex-direction column
    align-items center
    .logo
      min-width 10%
    .soc-links
      display flex
      min-width 10%
      justify-content flex-end
      text-transform uppercase
      a
        display flex
        padding 0
        margin 0 0.6rem
        border-radius 50%
        outline none
        transition background-color 0.5s
      a:last-child
        margin-inline-end 0
    .footer-nav
      flex-grow 1
      width 100%
      display flex
      flex-wrap wrap
      justify-content center
      ul
        width 100%
        margin 0
        padding 0
        li
          width 100%
          display flex
          flex-direction column
          justify-content center
          list-style none
      a
        width 100%
        display flex
        justify-content center
        padding 1rem 0
        align-items center
        text-transform uppercase
        font-size 0.875rem
        line-height 1.31
        font-weight 500
      li:first-child
        a
          font-size 0.75rem
          padding 0.875rem
          text-transform none
      .nav_img
        max-width 1.5rem
        max-height 1.5rem
        margin-inline-end 0.5rem
      .footer_line
        min-height: 1px
        background: linear-gradient(90deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.8) 35%, rgba(255,255,255,0.8) 65%, rgba(255,255,255,0.1) 100%)

  .bot-block
    display flex
    justify-content center
    padding 0.75rem 0 0.5rem
    .footer-info
      font-size 11px
      font-weight 300
  a
    display flex
    color var(--white-color)
    text-decoration none
    transition color .5s
