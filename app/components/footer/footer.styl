 #footer
  color var(--white-color)
  background-image linear-gradient(95deg, #591ec0, #995cfa)
  .top-block
    width 80%
    margin 0 auto
    padding 3.2rem 0
    justify-content space-evenly
    display flex
    flex-wrap wrap
    align-items center
    .logo
      width 25%
    .soc-links
      display flex
      width 25%
      justify-content flex-end
      font-size 1.125rem
      text-transform uppercase
      a
        display flex
        padding 0
        margin 0.8rem
        border-radius 50%
        transition background-color 0.5s
      a:hover
        transition background-color 0.5s
        background-color:  #fff
      svg
        width 2.5rem
        height 2.5rem
        fill #fff
        transition fill 0.5s
      svg:hover
        transition fill 0.5s
        fill var(--active-color)
    .footer-nav
      flex-grow 1
      display flex
      flex-wrap wrap
      justify-content center
      a 
        text-transform uppercase
        font-size 1.1rem
        letter-spacing 0.72px
        border-inline-end 2px solid white
        font-weight bold
      a:last-child
        border none
      a:hover
        color var(--active-color)
    .social-links
      width 10%
      display flex
      justify-content space-between

  .bot-block
    display flex
    justify-content center
    padding 1.2rem 0
    border-top 1px solid #fff
    .footer-info
      color var(--sec-bgcolor)
      font-size 1.125rem
  a
    display flex
    color var(--white-color)
    text-decoration none
    padding 0 .8rem
    transition color .5s

@media screen and (min-width 1366px) and (max-width 1440px)
  #footer
    .top-block
      width 90%
      .soc-links
        a
          margin 0 0.4rem !important
@media screen and (min-width 1024px) and (max-width 1365px)
  #footer
    .top-block
      width 95%
      .logo, .soc-links
        width 20%
      .soc-links
        a
          margin 0 0.4rem !important

@media screen and (min-width 320px) and (max-width 1023px)
  #footer
    .top-block
      width 100%
      display flex
      flex-direction column
      padding 1.2rem 0
      .footer-nav
        display flex
        flex-wrap wrap
        justify-content center
      .logo
        width auto
        padding-bottom 1rem
      .soc-links
        width auto
        padding-top 1rem