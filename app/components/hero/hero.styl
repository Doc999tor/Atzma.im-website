#hero
  max-height 1400px
  min-height 500px
  position relative
  .sup-block
    height 100%
    .header-content-wrap
      display flex
      justify-content center
      height 100%
    .header-content-wrap-text
      display flex
      position relative
      width 85%
      height 100%
      overflow hidden
      .titles_carousel
        display flex
        height 100%
      .hero_screen
        margin-top 2.3rem
        margin-inline-end 5.8rem
        position relative
        display flex
        align-self flex-start
        justify-content center
      .hero_title
        width 100%
        flex-grow 1
        display flex
        flex-direction column
        align-items center
      .iphone-border
        height 75vh
        max-height 810px
        max-width 405px
        border-radius 2.9vh
        width auto
        z-index 1
        top 2.5rem
        box-shadow 0 50px 50px 0 rgba(0, 0, 0, 0.45)
      .border_ltr
        right 5.5rem
      .border_rtl
        left 5.5rem
    h1
      letter-spacing 0.1rem
      font-size 3rem
      line-height 1.25
      font-weight bold
      max-width 90%
      opacity 0
      color #7539da
    .hero-description
      p
        padding-top 1.5rem
        font-size 1.375rem
        max-width 90%
        opacity 0

@media screen and (min-width 320px) and (max-width 767px)
  #hero
    .sup-block
      .header-content-wrap-text
        width 100%
        padding 0 1rem
    .hero_screen, .iphone-border
      display none !important
    .header-content-wrap
      min-height 568px
    .hero_title
      h1
        font-size 2rem !important
        max-width 100% !important
        line-height 1.1
      .hero-description
        font-size 1.2rem !important
        p
          padding-top 1rem
          line-height 1.2
          max-width 100% !important


body[style='direction: rtl;']
  #hero
    .hero_background
      transform: scale(-1, 1)
