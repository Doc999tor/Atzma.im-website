#hero
  height 100vh
  max-height 1400px
  background-repeat no-repeat
  background-size cover
  color var(--white-color)
  .sup-block
    background-image linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
    background-color transparent
    height 100%
    #header
      background-image none !important
    .header-content-wrap
      display flex
      justify-content center
      align-items center
      height 100%
    .header-content-wrap-text
      display flex
      position relative
      width 85%
      height 100%
      overflow hidden
      .titles_carousel
        position absolute
        overflow hidden
        display flex
        height 100%
        width 100%
        top 0
        opacity 0
      .hero_screen
        margin-top 3rem
        margin-inline-end 5.8rem
        position relative
        display flex
        align-self flex-start
        justify-content center
        .screen-img
          position absolute
          height 71.5vh
          top 50%
          left 50%
          transform translate(-50%, -50.5%) scale(0.7)
          max-height 764px
          width auto
          opacity 0
          border-radius 1rem
      .hero_title
        width 50%
        padding-top 5%
        flex-grow 1
      .iphone-border
        height 75vh
        max-height 810px
        max-width 405px
        border-radius 2.9vh
        width auto
        z-index 1
        top 2.5rem
        box-shadow: 0 50px 50px 0 rgba(0, 0, 0, 0.45)
      .border_ltr
        right 5.5rem
      .border_rtl
        left 5.5rem
    h1
      letter-spacing 0.1rem
      font-size 3.5rem
      line-height 1.25
      font-weight bold
      max-width 75%
      opacity 0
    .hero-description
      p
        padding-top 1.5rem
        font-size 1.375rem
        max-width 75%
        opacity 0
              
@media screen and (min-width 320px) and (max-width 767px)
  #hero
    .hero_screen, .iphone-border
      display none !important
    .hero_title
      h1
        font-size 3rem !important
        max-width 100% !important
      .hero-description
        font-size 1.2rem !important
        p
          max-width 100% !important
    .try-for-free-btn.rtl, .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      white-space nowrap
    .try-for-free-btn.rtl
      right 50% !important
      bottom 30%
      transform translateX(50%) !important
    .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      left 50% !important
      bottom 30%
      transform translateX(-50%) !important
@media screen and (min-width 768px) and (max-width 1365px)
  #hero
    .sup-block
      .border_ltr
        right 0 !important
      .border_rtl
        left 0 !important
      .hero_screen
        margin-top 0.35rem !important
        margin-inline-end 2.5rem !important
      .iphone-border
        top 0 !important
@media screen and (min-width 768px) and (max-width 1023px)
  #hero
    .sup-block
      .hero_title
        padding-top 3% !important
      h1
        font-size 3.5rem
        max-width 95%
      .hero-description
        font-size 1.25rem
        p
          max-width 90%
      .try-for-free-btn
        bottom 30%
        padding 1rem 2.4rem
        font-size 1rem

@media screen and (min-width 1024px) and (max-width 1365px)
  #hero
    .sup-block
      .header-content-wrap-text
        width 90%
      .hero_screen
        padding-top 0.35rem !important
      .iphone-border
        top 0 !important
      .hero_title
        padding-top 3% !important
      h1
        max-width 85%
      .hero-description
        p
          max-width 85%
      .try-for-free-btn
