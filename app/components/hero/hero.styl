#hero
  height 100vh
  max-height 1400px
  background-repeat no-repeat
  background-size cover
  color var(--white-color)
  .sup-block
    background-image linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
    background-color transparent
    height 100%
    #header
      background-image none !important
    .header-content-wrap
      display flex
      justify-content center
      align-items center
      height 100%
    .header-content-wrap-text
      display flex
      position relative
      width 85%
      height 100%
      .hero_screen
        padding-top 3rem
        padding-inline-end 6.3rem
      .hero_title
        padding-top 5%
        flex-grow 1
      .iphone-border
        position absolute
        height 75vh
        max-height 810px
        max-width 405px
        border-radius 6vh
        width auto
        z-index 1
        top 2.5rem
      .border_ltr
        right 5.5rem
      .border_rtl
        left 5.5rem
      .border_shadow
        box-shadow 0px 15px 24px 6px rgba(0,0,0,0.30)
    h1
      letter-spacing 0.1rem
      font-size 3.5rem
      line-height 1.25
      font-weight bold
      max-width 75%
    .hero-description
      p
        padding-top 1.5rem
        font-size 1.375rem
        max-width 75%
              
@media screen and (min-width 320px) and (max-width 767px)
  #hero
    .hero_screen, .iphone-border
      display none !important
    .hero_title
      h1
        font-size 3rem !important
        max-width 100% !important
      .hero-description
        font-size 1.2rem !important
        p
          max-width 100% !important
    .try-for-free-btn.rtl, .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      white-space nowrap
    .try-for-free-btn.rtl
      right 50% !important
      bottom 50%
      transform translateX(50%) !important
    .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      left 50% !important
      bottom 50%
      transform translateX(-50%) !important
@media screen and (min-width 768px) and (max-width 1365px)
  #hero
    .sup-block
      .border_ltr
        right 0 !important
      .border_rtl
        left 0 !important
      .hero_screen
        padding-top 1rem !important
        padding-inline-end 0.8rem !important
      .iphone-border
        top 0 !important
@media screen and (min-width 768px) and (max-width 1023px)
  #hero
    .sup-block
      .hero_title
        padding-top 3% !important
      h1
        font-size 3.5rem
        max-width 100%
      .hero-description
        font-size 1.25rem
        p
          max-width 90%
      .try-for-free-btn
        bottom 30%
        padding 1rem 2.4rem
        font-size 1rem

@media screen and (min-width 1024px) and (max-width 1365px)
  #hero
    .sup-block
      .header-content-wrap-text
        width 90%
      .hero_screen
        padding-top 1rem !important
      .iphone-border
        top 0 !important
      .hero_title
        padding-top 3% !important
      h1
        max-width 85%
      .hero-description
        p
          max-width 85%
      .try-for-free-btn
        bottom 25%
@media screen and (min-width 1366px) and (max-width 1919px)
  #hero
    height 117vh
@media screen and (min-height 568px) and (max-height 635px)
  #hero
    .screen-img
      border-radius 1.5rem !important
    .hero_title
      padding-top 3% !important
      h1
        font-size 3.5rem
      .hero-description
        font-size 1.25rem
    .try-for-free-btn
      padding 1rem 2.4rem !important
      bottom 30% !important
@media screen and (min-height 635px) and (max-height 960px)
  #hero
    .hero_screen
      .screen-img
        border-radius 1.5rem !important

@media screen and (min-height 320px) and (max-height 567px)
  .hero_screen, .iphone-border
    display: none !important
  .hero_title
    padding-top 0 !important
    h1
      font-size 3rem !important
      max-width 100% !important
    .hero-description
      font-size 1.2rem !important
      p
        max-width 100% !important
  .try-for-free-btn
    padding 0.6rem 2rem !important
    bottom 30% !important

@media screen and (min-height 1080px)
  #hero
    .iphone-border
      border-radius 4rem !important

@media screen and (min-width 1920px)
  #hero
    height 117vh
    .iphone-border
      top 3rem !important
    .border_ltr
      right 6.7rem !important
    .border_rtl
      left 6.7rem !important
    .sup-block
      .header-content-wrap-text
        width 81.5%
      .hero_title
        padding-top 7% !important
    .hero_screen
      padding-top 4rem !important
      padding-inline-end 7.8rem !important
    .sup-block
      h1
        font-size 4.5rem
      .hero-description
        p
          font-size 1.75rem
    .try-for-free-btn
      bottom 50% 
      font-size 1.375rem
      padding 1.375rem 3.375rem !important
