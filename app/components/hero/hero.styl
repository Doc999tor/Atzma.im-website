#hero
  height 100vh
  max-height 1400px
  background-repeat no-repeat
  background-size cover
  color var(--white-color)
  .sup-block
    background-image linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
    background-color transparent
    height 100%
    #header
      background-image none !important
    .header-content-wrap
      display flex
      justify-content center
      align-items center
      height 100%
    .header-content-wrap-text
      display flex
      position relative
      width 80%
      height 100%
      .hero_screen
        padding-top 4rem
        padding-inline-end 1.5rem
      .hero_title
        padding-top 5%
        flex-grow 1
      .iphone-border
        position absolute
        height 75vh
        max-height 810px
        max-width 405px
        border-radius 6vh
        width auto
        z-index 1
        top 3rem
      .border_ltr
        right 0
      .border_rtl
        left 0
      .border_shadow
        box-shadow 0px 15px 24px 6px rgba(0,0,0,0.30)
    h1
      letter-spacing 0.1rem
      font-size 4.5rem
      max-width 75%
    .hero-description
      font-size 1.75rem
      p
        padding-top 1.5rem
        max-width: 75%
    .try-for-free-btn
      z-index 1
      bottom 25%
      position absolute
      text-transform uppercase
      font-size 1.4rem
      display flex
      justify-content center
      align-items center
      border-radius 50px
      border 3px solid transparent
      background-color var(--active-color)
      padding 1.4rem 3.3rem
      color var(--white-color)
      outline none
      text-decoration none
      font-weight bold
      transition background-color 0.3s linear, border-color 0.3s linear, color 0.3s linear
      &:hover, &:focus
        background-color var(--white-color)
        border-color currentColor
        color var(--active-color) !important
        svg
          fill var(--active-color)
          stroke var(--active-color)
      svg 
        width 1.5rem
        height 1.5rem
        fill var(--white-color)
        stroke var(--white-color)
        margin-inline-end 0.7rem
        transition fill 0.3s, stroke 0.3s
      img
        padding-inline-end 1rem
    .rtl
      right 0%
    .ltr
      left 0%
              
@media screen and (min-width 320px) and (max-width 767px)
  #hero
    .hero_screen, .iphone-border
      display none !important
    .hero_title
      h1
        font-size 3rem !important
        max-width 100% !important
      .hero-description
        font-size 1.2rem !important
        p
          max-width 100% !important
    .try-for-free-btn.rtl, .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      white-space nowrap
    .try-for-free-btn.rtl
      right 50% !important
      bottom 30%
      transform translateX(50%) !important
    .try-for-free-btn.ltr
      font-size 1rem !important
      padding 0.5rem 1.4rem !important
      left 50% !important
      bottom 30%
      transform translateX(-50%) !important

