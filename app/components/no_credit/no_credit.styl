#no_credit
  padding-top 6.25rem
  display flex
  position relative
  -moz-padding-start 6.25rem 
  -webkit-padding-start 6.25rem 
  padding-inline-start 6.25rem
  min-height  26.625rem
  overflow hidden
  object-fit contain
  transition padding 0.3s
  background-image linear-gradient(123deg, #591ec0, #6623db 28%, #7d3ee8 54%, #be95ff 113%)
  .glow_1
    position absolute
    top 1rem
    width 120px
    height 44px
    -webkit-filter blur(40px)
    filter blur(40px)
    background-color var(--white-color)
  .ltr_glow_1
    left -2rem
  .rtr_glow_1
    right -2rem
  .glow_2
    position absolute
    top 1rem
    width 106px
    height 40px
    -webkit-filter blur(45px)
    filter blur(45px)
    background-color var(--white-color)
  .ltr_glow_2
    left 21%
  .rtr_glow_2
    right 21%
  .glow_3
    position absolute
    top 17rem
    width 229.1px
    height 64.5px
    opacity 0.7
    -webkit-filter blur(50px)
    filter blur(50px)
    background-color var(--white-color)
  .ltr_glow_3
    right 30%
  .rtr_glow_3
    left 30%
  .glow_4
    position absolute
    left 106rem
    top 17rem
    width 133.9px
    height 112px
    opacity 0.7
    -webkit-filter blur(50px)
    filter blur(50px)
    background-color var(--white-color)
  .ltr_glow_4
    right 3%
  .rtr_glow_4
    left 3%
  .wave_1
    position absolute
    top 0
    width 50%
  .ltr_wave_1
    left -2.25rem
  .rtr_wave_1
    right -2.25rem
    transform scale(-1, 1)
  .wave_2
    position absolute
    bottom 0
    width 71%
  .ltr_wave_2
    left 0
  .rtr_wave_2
    right 0
    transform scale(-1, 1)
  .wave_3
    position absolute
    bottom 0
    width 29%
  .ltr_wave_3
    right -2.25rem
  .rtr_wave_3
    left -2.25rem
    transform scale(-1, 1)
  .no_credit-content
    display flex
    flex-direction column
    align-items flex-start
    h2
      display flex
      margin 0
      flex-direction column
    span
      font-size 3.5rem
      font-weight bold
      line-height 1.11
      color var(--white-color)
    .try-for-free-btn
      margin-top 1.5rem
  .img-compound
    position absolute
    top 3%
  .compound-dir-rtl
    left 7%
    top 7%
    .phone-frame
      width 34.375rem
  .compound-dir-ltr
    right 7%
    .phone-frame
      width 32.5rem

@media screen and (min-width 1920px)
  #no_credit
    padding-top 8.8rem
    -moz-padding-start 10rem 
    -webkit-padding-start 10rem 
    padding-inline-start 10rem
    min-height 37.5rem
    .glow_1
      top 2rem
    .ltr_glow_1
      left 5rem
    .rtr_glow_1
      right 5rem
    .glow_2
      top 2rem
    .glow_3
      top 26rem
    .ltr_glow_3
      right 35%
    .rtr_glow_3
      left 35%
    .glow_4
      top 25rem
    .wave_1
      position absolute
      top 0
    .ltr_wave_1
      left 0rem
    .rtr_wave_1
      right 0rem
      transform scale(-1, 1)
    .wave_2
      position absolute
      bottom 0
      width 71%
    .ltr_wave_2
      left 0
    .rtr_wave_2
      right 0
      transform scale(-1, 1)
    .wave_3
      position absolute
      bottom 0
      width 29%
    .ltr_wave_3
      right -2.25rem
    .rtr_wave_3
      left -2.25rem
      transform scale(-1, 1)
    .no_credit-content
      span
        font-size 4.5rem
        transition font-size 0.3s
      .try-for-free-btn
        margin-top 3.75rem
    .img-compound
      top 9.5%
    .phone-frame
      width 47.5rem !important
@media screen and (min-width 320px) and (max-width 1023px)
  #no_credit
    -moz-padding-start 1rem 
    -webkit-padding-start 1rem 
    padding-inline-start 1rem
    -moz-padding-end 1rem 
    -webkit-padding-end 1rem 
    padding-inline-end 1rem
    .no_credit-content
      width 100%
      align-items center
@media screen and (min-width 320px) and (max-width 1200px)
  #no_credit
    .img-compound, .wave_3
      display none
    .wave_2
      width 100%

