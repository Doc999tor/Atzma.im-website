#business_types
  padding 2rem 0 0
  display flex
  flex-direction column
  align-items center
  header
    padding 0 1rem
    h2
      font-size 2rem
      margin 0
      line-height 1.1
      font-weight bold
      text-align start
    p
      padding-top 1rem
      text-align start
      font-size 1.125rem
  .business_types-content-box
    display flex
    width 100%
    padding-top 2rem
    .swiper-wrapper
      margin-bottom 3rem
    .swiper-slide
      padding 0 1rem 0rem
    .business_types-container
      display flex
      flex-wrap wrap
      justify-content space-between
      .slide-item
        width 49%
        border-radius 1rem
        overflow hidden
        margin-bottom 0.5rem
        .slide
          margin 0
          height 9rem
          position relative
          figcaption
            position absolute
            padding 0.5rem
            line-height 1
            width 100%
            font-weight 500
            background-color rgba(255,255,255,0.7)
            bottom 0
            font-size 0.875rem
            text-align center
          picture 
            height 100%
            display flex
            width 100%
            img
              width 100%
              height 100%
              object-fit cover

@supports ((-webkit-backdrop-filter: blur(12px)) or (backdrop-filter: blur(12px))) {
  .slide-item figcaption {
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
  }
}