#feedback
  display flex
  flex-direction column
  align-items center
  header
    h2
      margin 0
      padding 0 2rem
      line-height 1.07
      text-align center
      font-size 3.75rem
      font-weight bold
    p
      padding-top 1.5rem
      font-size 1.75rem
      text-align center

  .feedback_wrap
    display flex
    justify-content center
    align-items center
    width 75%
    button
      padding 0
      display flex
      align-items center
      justify-content center
      width 5%
    .swiper-container
      width 90%
      flex-grow 1
      .swiper-wrapper
        flex-grow 1
    // .swiper-wrapper
    .swiper-slide
      padding 5rem 0
      figure
        display flex
        flex-direction column
        margin 1.25rem
        padding-top 2.5rem
        border-radius 20px
        box-shadow: 0 20px 20px 0 rgba(41,41,204,0.16);
        background-color var(--white-color)
      h3
        margin 0
      .pic_wrap
        display flex
        justify-content center  
        picture
          width 8.75rem
          height 8.75rem
          border-radius 50%
          overflow hidden
        .client_pic
          object-fit cover
          width 8.75rem
          height 8.75rem
      figcaption
        padding-top 0.75rem
        h3
          text-align center
          font-size 1.6rem
          font-weight 600
        .review_info
          display flex
          flex-direction column
          align-items center
          padding-top 2.2rem
          .rating-stars
            img
              margin 0 0.1rem
          p
            padding 1rem 2.5rem 2rem
            text-align center
            font-size 1.1rem
            letter-spacing 0.02rem

@media screen and (min-width 320px) and (max-width 1600px)
  #feedback
    .feedback_wrap
      width 95%

@media screen and (min-width 320px) and (max-width 1023px)
  #feedback
    button
      img
        width 3.5rem
    
