#benefit
  position relative
  margin 2rem 0
  overflow hidden
  height 31.25rem
  box-shadow 0 15px 25px 0 rgba(41, 41, 204, 0.16)
  .slide
    position absolute
    display flex
    justify-content center
    align-items center
    overflow hidden
    height 100%
    width 100%
    top 0
    right 0
    left 0
    bottom 0
    opacity 0
    .pic_container
      display flex
      align-items center
      justify-content center
      overflow hidden
      height 100%
      width 51%
      picture
        height 100%
      img
        width 100%
        height 100%
        object-fit cover
    .texts
      height 100%
      width 49%
      background-color var(--white-color)
      display flex
      flex-direction column
      justify-content center
      padding 2rem
      -moz-padding-start 4.375rem
      -webkit-padding-start 4.375rem 
      padding-inline-start 4.375rem
      .title-container
        overflow hidden
        h2
          margin 0
          line-height 1.1
          font-size 3.125rem
          font-weight bold
          opacity 0
      .text-container
        margin-top 1.5rem
        overflow hidden
        p
          white-space pre-line
          font-size 1.2rem
          opacity 0
  .active
    opacity 1
    img
      animation imageAnimation 0.3s
    h2
      animation texteAnimation 0.3s forwards
      animation-delay 0.2s
    p
      animation texteAnimation 0.3s forwards
      animation-delay 0.5s
@keyframes imageAnimation
  0%
    transform scale(1.6)
  
@keyframes texteAnimation
  0%
    opacity 0
    transform translateY(100%)
  100%
    opacity 1
@media screen and (min-width 1600px) and (max-width 1919px)
  #benefit
    .slide
      .texts
        .text-container
          p
            font-size 1.375rem
@media screen and (min-width 1024px) and (max-width 1365px)
  #benefit
    height 25rem
    box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
    .slide
      .texts
        padding 1rem
        -moz-padding-start 2rem
        -webkit-padding-start 2rem 
        padding-inline-start 2rem
        .text-container
          margin-top 0.5rem
        .title-container
          h2
            font-size 2.5rem
        .text-container
          margin-top 0.5rem
          p
            font-size 1.15rem
@media screen and (min-width 768px) and (max-width 1023px)
  #benefit
    height 25rem
    box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
    .slide
      .texts
        padding 1rem
        -moz-padding-start 2rem
        -webkit-padding-start 2rem 
        padding-inline-start 2rem
        .title-container
          h2
            font-size 1.75rem
        .text-container
          margin-top 0.5rem
          p
            font-size 1rem
@media screen and (min-width 320px) and (max-width 767px)
  #benefit
    height 25rem
    box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
    .slide
      .pic_container
        display none
      .texts
        width 100%
        padding 1rem
        -moz-padding-start 2.5rem
        -webkit-padding-start 2.5rem 
        padding-inline-start 2.5rem
        .title-container
          h2
            font-size 2rem
        .text-container
          p
            font-size 1.2rem
@media screen and (min-width 1920px)
  #benefit
    margin 3.5rem 0
    height 43.75rem
    box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
    .slide
      .texts
        padding 3.5rem
        -moz-padding-start 6.25rem
        -webkit-padding-start 6.25rem 
        padding-inline-start 6.25rem
        .title-container
          h2
            font-size 3.75rem
        .text-container
          p
            font-size 1.75rem