#benefit
  position relative
  overflow hidden
  min-height 4rem
  height 31.25rem
  box-shadow 0 15px 25px 0 rgba(41, 41, 204, 0.16)
  
  .slide
    position absolute
    display flex
    justify-content center
    align-items center
    overflow hidden
    height 100%
    width 100%
    top 0
    right 0
    left 0
    bottom 0
    opacity 0
    .pic_container
      display flex
      align-items center
      justify-content center
      overflow hidden
      height 100%
      width 51%
      img
        width 100%
        height 100%
    .texts
      height 100%
      width 49%
      background-color var(--white-color)
      padding 5rem 0
      -moz-padding-start 4.375rem
      -webkit-padding-start 4.375rem 
      padding-inline-start 4.375rem
      .title-container
        overflow hidden
        h2
          margin 0
          width 75%
          line-height 1.1
          font-size 3.125rem
          font-weight bold
          opacity 0
      .text-container
        margin-top 1.5rem
        overflow hidden
        p
          font-size 1.375rem
          width 80%
          opacity 0
  .active
    opacity 1
    img
      animation imageAnimation 0.3s
    h2
      animation texteAnimation 0.3s forwards
      animation-delay 0.2s
    p
      animation texteAnimation 0.3s forwards
      animation-delay 0.5s
@keyframes imageAnimation
  0%
    transform scale(1.6)
  
@keyframes texteAnimation
  0%
    opacity 0
    transform translateY(100%)
  100%
    opacity 1
@media screen and (min-width 1920px)
  #benefit
    height 43.75rem
    box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
    .slide
      .texts
        padding 9.375rem 0
        -moz-padding-start 6.25rem
        -webkit-padding-start 6.25rem 
        padding-inline-start 6.25rem
        .title-container
          h2
            font-size 3.75rem
          p
            font-size 1.75rem