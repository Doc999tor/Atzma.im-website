#leads
  min-height 36rem
  position relative
  display flex
  overflow hidden
  justify-content center
  flex-direction column
  align-items center
  margin-bottom 6rem
  background-color #efefff
  box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
  .hand
    width 6.25rem
    height auto
  .sending_wrap
    width 100%
    padding 0 2rem
    animation sending 0.3s
    .sending_body
      width 100%
      display flex
      align-items flex-end
      padding-bottom 2rem
      img
        width 10rem
        height 10rem
      p
        font-size 1.375rem
        font-weight 600
        width 100%
        text-align center
    .sending
      padding-bottom 0
      p
        color var(--main-color)

.required_fields_popup
  position fixed
  background-color transpatent
  top 0
  left 0
  right 0
  bottom 0
  z-index 2

@keyframes sending
  0%
    transform scale(0.7)
@media screen and (min-width 320px) and (max-width 767px)
  #leads
    margin-bottom 0

