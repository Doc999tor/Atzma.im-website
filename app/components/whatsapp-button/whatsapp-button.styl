#whatsapp-button
  min-width 4rem
  height 4rem
  position fixed
  z-index 5
  bottom 1.5rem
  border-radius 50%
  display flex
  align-items center
  justify-content center
  background-color var(--white-color)
  box-shadow 0 12px 16px 0 rgba(41, 41, 204, 0.25)
  opacity 0
.position_rtl
  left 1rem
.position_ltr
  right 1rem
.show_ws_button
  animation show_ws_button 0.3s forwards

@keyframes show_ws_button {
  0% {
    transform: rotate(90deg) scale(0)
    opacity 1
  }
  100% {
    transform none
    opacity 1
  }
}