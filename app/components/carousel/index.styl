#hero
	.titles_carousel
		.hero_title
			.main-title, .hero-description
				overflow hidden
	.sup-block
		.header-content-wrap-text
			.main-title
				padding-bottom 2rem
				h1
					animation texteAnimation 0.4s forwards
					animation-delay 0.4s
			.main-strip_wrap
				width 100%
				display flex
				justify-content center
				margin-bottom 2rem
				img
					height 20rem
					width auto
					object-fit cover
			.titles_carousel.active
				opacity 1
				.screen-img
					transform translate(-50%, -50.5%) scale(1) !important
					opacity 1
					transition transform 0.3s, opacity 0.4s

@keyframes texteAnimation
	0%
		opacity 0
		transform translateY(100%)
  100%
		opacity 1