#contact_us
  padding-top 1.5rem
  header
    padding 0 1rem
    .title-wrap
      display flex
      justify-content center
      width 100%
      padding 0 1.5rem
      align-items center
      .contact_us_title
        font-size 2rem
        font-weight bold
        line-height 1
        margin 0
        text-align center
      .emoji
        width 2rem
        height 2rem
        -moz-margin-start 0.5rem
        -webkit-margin-start 0.5rem
        margin-inline-start 0.5rem
    p
      padding 1rem 1.5rem
      text-align center
      font-size  1.125rem
  .contact_links
    margin 0
    padding 1rem 2rem 6rem
    li
      list-style none
      .messenger, .messenger-email
        display flex
        align-items center
        justify-content space-between
        border-radius 3rem
        font-size 1.1rem
        font-weight 500
        text-decoration none
        box-shadow 0 12px 16px 0 rgba(41, 41, 204, 0.12)
        background-image linear-gradient(to bottom, #ffffff 30%, #dee1ff)
        padding 0.375rem
        -moz-pading-start 1.4rem
        -webkit-pading-start 1.4rem
        padding-inline-start 1.4rem
        margin-bottom 1rem
        .icon_wrap
          display flex
        .icon
          width 40px
          height 40px
      .messenger-email
        color #6f2edb
        .email_wrap
          display flex
          align-items center
          justify-content center
          border-radius 50%
          width 2.75rem
          height 2.75rem
          background-image linear-gradient(to bottom, #be95ff, #6e2cdb)

    
          