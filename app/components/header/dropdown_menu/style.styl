.dropDown_wrap
  position relative
  .dropDown_list
    padding 0
    margin 0
    background var(--dark-color)
    animation dropDown 0.5s
    .dropDown_item
      list-style none
      a
        display block
        white-space nowrap
        text-decoration none
        font-weight 600
        font-size 1.3rem
        color var(--white-color)

  @keyframes dropDown {
    0% {
      opacity 0
      transform translateY(-100%)
    }
  }
