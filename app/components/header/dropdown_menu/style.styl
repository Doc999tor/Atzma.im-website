.dropDown_wrap
  position relative
  .dropDown_list
    padding 0
    margin 0
    background var(--dark-color)
    opacity 0
    transform translateY(-100%)
    animation dropDown 0.5s forwards
    .dropDown_item
      list-style none
      a
        display block
        white-space nowrap
        text-decoration none
        font-weight 600
        font-size 1.3rem
        color var(--white-color)
  .closeLangAnimation
    animation closeLangAnimation 0.5s forwards

  @keyframes dropDown {
    0% {
      opacity 0
      transform translateY(-100%)
    }
    100% {
      opacity 1
      transform translateY(0)
    }
  }
  @keyframes closeLangAnimation {
    0% {
      opacity 1
      transform translateY(0)
    }
    100% {
      opacity 0
      transform translateY(-100%)
    }
  }
