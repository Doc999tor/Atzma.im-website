.no-scroll
  overflow hidden
#header
  display flex
  justify-content center
  color var(--white-color)
  background-image: linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
  .contact_head
    display flex
    padding 1.8rem 0
    width 85%
    transition width 0.3s
    .logo-text
    a
      color var(--white-color)
      text-decoration none
    a
      cursor pointer
    .navigation_container
      flex-grow 1
      display flex
      .menu_btn
        display none
      .menu_img-wrap
        flex-grow 1
        display flex
    .top-nav
      display flex
      flex-wrap wrap
      font-weight bold
      align-items center
      flex-grow 1
      text-transform uppercase
      font-size 1rem
      a
        padding 0 1.6rem
        white-space nowrap
        transition color 0.3s linear
      a:hover
        color var(--active-color)
      a:focus
        color var(--active-color)
        outline 0
    .logo-wrap
      display flex
      align-items center
    .log-in
      font-weight bold
      text-transform uppercase
      font-size 1rem
      align-items center
      display flex
      a
        white-space nowrap
      .login-btn
        cursor pointer
        margin 0 2.5rem
        transition color 0.2s linear
      .login-btn:hover
        color var(--active-color)
      .login-btn:focus
        color var(--white-color)
      .sign-in-btn
        transition background-color 0.3s linear
        font-weight bold
        cursor pointer
        display flex
        align-items center
        padding 0.75rem 1.25rem
        border-radius 50px
        background-color rgba(0, 0, 0, 0.12)
        border 2px solid var(--white-color)
        span
          line-height 1
      .sign-in-btn:hover
        background-color var(--white-color)
        color var(--active-color)
    .lang-block
      display flex
      align-items center
      .img-wrap
        display flex
      .lang-text
        padding-inline-start 0.5rem
        font-size 1rem
        text-transform uppercase
        color var(--white-color)
        font-weight bold
    .lang_dropdown
      display flex
      align-items center
      position relative
      height 100%
      svg
        width 1.5rem
        height 1.5rem
        fill var(--white-color)
    .lang_dropdown:hover .dropDown_wrap
      display flex
      justify-content flex-end
    .lang_dropdown:hover .lang-text
      color var(--active-color)
      transition color 0.3s
    .lang_dropdown:hover svg
      fill var(--active-color)
      transition fill 0.3s

h2
  font-weight normal
@media screen and (min-width 320px) and (max-width 767px)
  #header
    padding-top 1rem
    padding-bottom 1rem
    .contact_head
      width 100% !important
      .logo
        .logo-text
          -moz-padding-start 1rem
          -webkit-padding-start 1rem
          padding-inline-start 1rem
      .navigation_container
        flex-grow 0
        position relative
        padding 0 1rem
        .menu_btn
          display flex
          align-items center
          justify-content center
          padding 0
        .menu_img-wrap
          display none
      .menu-container
        display flex
        justify-content flex-end
        align-items flex-start 
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        z-index 100
        .mobile-nav
          font-size 1.3rem
          margin-top 4rem
          width 50%
          background-color var(--dark-color)
          ul
            display flex
            flex-direction column
            list-style-type none
            margin 0
            padding 1rem 2rem 2.5rem
          li
            padding-bottom: 0.5rem
          li:last-lild
            padding none 

              

@media screen and (min-width 1366px) and (max-width 1440px)
  .logo-text
    padding-inline-end 1.1rem
  .contact_head
    .top-nav
      a
        padding 0 1.1rem !important


@media screen and (min-width 1024px) and (max-width 1365px)
  .logo-text
    padding-inline-end 0.7rem !important
  .contact_head
    width 90% !important
    .top-nav
      a
        padding 0 0.7rem !important
  .login-btn
    margin 0 1.4rem !important

@media screen and (min-width 414px) and (max-width 1023px)
  .contact_head
    padding 1.5rem 0 !important
    width 95% !important
    justify-content space-between !important
    .top-nav
      a
        padding 0 0.5rem !important
    .login-btn
      margin 0 0.8rem !important

@media screen and (min-width 320px) and (max-width 600px)
  #header
    .contact_head
      padding 0.5rem 0
      .top-nav
        padding 0.8rem 0
        a
          font-size 0.9rem
      .log-in
        .login-btn, .sign-in-btn, .lang-text
          font-size 0.9rem !important
        .login-btn
          margin 0 0.5rem !important
        .sign-in-btn
          border-width 2px !important
          padding 0.3rem 0.5rem !important
        .img-wrap
          img
            width 1rem
@media screen and (min-width 320px) and (max-width 413px)
  #header
    .logo
      flex-grow 1
@media screen and (min-width 1920px)
  #header
    .contact_head
      display flex
      padding 2rem 0
      width 81.5%
      transition width 0.3s
      .top-nav, .log-in, .lang-text
        font-size 1.125rem !important
      .log-in
        .sign-in-btn
          padding 0.8rem 1.4rem
        .login-btn
          margin 0 3.125rem


@keyframes onMenu
  0%
    transform translateX(100%)  
@keyframes onMenu_rtl
  0%
    transform translateX(-100%)  
@keyframes offMenu
  100%
    transform translateX(100%)  
@keyframes offMenu_rtl
  100%
    transform translateX(-100%)  


body[style='direction: ltr;']
  #header
    .mobile-nav
      animation onMenu 0.5s
      border-radius: 1rem 0 0 1rem
    .close_animation
      animation offMenu 0.5s

body[style='direction: rtl;']
  #header
    .menu_btn
      img
        transform: scale(-1, 1)
    .mobile-nav
      animation onMenu_rtl 0.5s
      border-radius: 0 1rem 1rem 0
    .close_animation
      animation offMenu_rtl 0.5s