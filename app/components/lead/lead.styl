#lead
  min-height 23.125rem
  padding 2.625rem 0
  position relative
  display flex
  overflow hidden
  justify-content center
  margin-bottom 3rem
  background transparent linear-gradient(0deg, #591EC0 0%, #6623DB 20%, #7D3EE8 55%, #BE95FF 100%) 0% 0% no-repeat padding-box
  .wave_left, .wave_right
    position absolute
    top 0
    height 100%
  .wave_left
    left 0
  .wave_right
    right 0
  .sending_wrap
    min-height 100%
    width 70%
    .sending_body
      width 100%
      display flex
      align-items flex-end
      padding-bottom 2rem
      img
        width 10rem
        height 10rem
      p
        font-size 1.375rem
        font-weight 600
        width 100%
        text-align center
    .sending
      padding-bottom 0
      p
        color var(--main-color)