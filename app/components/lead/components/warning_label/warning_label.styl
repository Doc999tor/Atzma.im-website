.lead_warning_label
  position absolute
  display flex
  flex-direction column
  align-items center
  top -110%
  left 50%
  transform translateX(-50%)
  animation: warningLabel 0.3s
  .label_body
    display flex
    padding 0.6rem 0.7rem
    background-color var(--label-bgcolor)
    border-radius 0.5rem
    color var(--white-color)
    font-size 1rem
    font-weight 600
    img
      margin-inline-end 0.5rem
    p
      white-space nowrap
  .triangle
    width 0
    height 0
    border-left 0.5rem solid transparent
    border-right 0.5rem solid transparent
    border-top 0.5rem solid var(--label-bgcolor)
@keyframes warningLabel
  0%
    transform translateX(-50%) scale(0)

@media screen and (min-width 1920px)
  .lead_warning_label
    .label_body
      font-size 1.25rem