.price
  padding 3rem 2.3rem 2.25rem
  border-radius 1.25rem
  position relative
  min-width 19.75rem
  margin 1.25rem 1.25rem 0
  display flex
  flex-direction column
  align-items center
  box-shadow 0 20px 35px 0 rgba(41, 41, 204, 0.16)
  background-color var(--white-color)
  .discount
    position absolute
    top 0.8rem
    padding 0.5rem 1rem
    border-radius 3rem
    background-color var(--active-color)
    font-size 1rem
    font-weight bold
    color var(--white-color)
    .label
      padding-inline-start 0.5rem
  .icon_wrap
    display flex
    align-items center
    justify-content center
    width 10rem
    height 10rem
    border-radius 50%
    border solid 3px #eba000
    img
      width 6rem
      height 6rem
  .price_info
    display flex
    flex-direction column
    width 100%
    flex-grow 1
  .name-strip
    padding 1.3rem 0
    display flex
    align-items center
    width 100%
    justify-content space-between
    .line
      display block
      width 30%
      border-bottom solid 0.1rem #eba000
    .price_name
      font-size 1.375rem
      font-weight 600
      color #eba000
  .price_count
    p
      color var(--dark-color)
    .count
      font-size 3rem
      font-weight bold
      -moz-padding-end 0.5rem
      -webkit-padding-end 0.5rem
      padding-inline-end 0.5rem
    .bill_count
      font-size 1.375rem
  .business_type
    font-size 1.125rem
    font-weight 600
  ul
    flex-grow 1
    padding-inline-start 1.5rem
    margin 1.5rem 0 2rem
  .business_feature
    padding 0.4rem 0
    -moz-padding-start  0.5rem
    -webkit-padding-start  0.5rem
    padding-inline-start 0.5rem
    font-size 1rem
  .link
    display block
    width 100%
    text-decoration none
  .paid
    box-shadow 0 3px 6px 0 rgba(0, 0, 0, 0.1)
    background-color var(--active-color)
    width 100%
    display flex
    align-items center
    justify-content center
    color white
    padding 0.8rem 0
    border-radius 0.5rem
    font-size 1.25rem
.basic_price
  background-image linear-gradient(158deg, #591ec0, #6623db 29%, #7d3ee8 57%, #be95ff 119%)
  .price_count
    p
      color #eba000
  .business_feature,
  .business_type
    color var(--white-color)
  .paid
    background-color: rgba(255, 255, 255, 0.25)
body[style='direction: ltr;']
  .price
    .discount
      right 1rem
body[style='direction: rtl;']
  .price
    .discount
      left 1rem